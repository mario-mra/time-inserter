{
    "name": "time-inserter",
    "displayName": "Time Inserter",
    "description": "Add current time (HH:MM) just where the cursor is.",
    "version": "0.0.1",
    "publisher": "mario-mra",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.timeinserter"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Time Inserter configuration",
            "properties": {
                "timeinserter.pre": {
                    "type": "string",
                    "default": "*[",
                    "description": "String to add before the time."
                },
                "timeinserter.post": {
                    "type": "string",
                    "default": "]*",
                    "description": "String to add after the Time"
                },
                "timeinserter.format": {
                    "type": "bool",
                    "default": true,
                    "description": "24hours format?"
                }
            }
        },
        "commands": [
            {
                "command": "extension.timeinserter",
                "title": "Add current time (HH:MM) just where the cursor is",
                "key": "ctrl+alt+1",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
