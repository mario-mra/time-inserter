{
    "name": "time-inserter",
    "displayName": "Time Inserter",
    "description": "Insert current time (hh:mm) just where the cursor is.",
    "version": "0.0.1",
    "publisher": "mario-mra",
    "engines": {
        "vscode": "^0.10.5"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:timeinserter.insert"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Time Inserter configuration",
            "properties": {
                "timeinserter.pre": {
                    "type": "string",
                    "default": "",
                    "description": "String to add before the time."
                },
                "timeinserter.post": {
                    "type": "string",
                    "default": "",
                    "description": "String to add after the Time"
                },
                "timeinserter.format": {
                    "type": "boolean",
                    "default": true,
                    "description": "24hours format?"
                }
            }
        },
        "commands": [
            {
                "command": "timeinserter.insert",
                "title": "Insert current time (hh:mm) just where the cursor is",
                "when": "editorTextFocus"
            }
        ],
        "keybindings": [
            {
                "command": "timeinserter.insert",
                "key": "Ctrl+Alt+1",
                "mac": "Ctrl+Alt+1",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
